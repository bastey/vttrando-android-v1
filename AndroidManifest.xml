<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bastey.randobretagne"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="11" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock" >
        <activity
            android:name="com.bastey.randobretagne.RandoHomeActivity"
            android:label="@string/title_activity_home" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.bastey.randobretagne.RandoListActivity"
            android:label="@string/title_activity_rando_list" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bastey.randobretagne.RandoHomeActivity" />
        </activity>
        <activity
            android:name=".RandoDetailActivity"
            android:label="@string/title_activity_rando_detail" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bastey.randobretagne.RandoListActivity" />
        </activity>
    </application>

</manifest>