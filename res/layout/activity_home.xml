<?xml version="1.0" encoding="utf-8"?>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/label_titre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center_horizontal"
                android:text="@string/label_titreHome"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold"
                android:typeface="normal" />

            <!-- BEGIN - Radio Sports -->
            <TextView
                android:id="@+id/label_sport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="100dp"
                android:text="@string/label_sports"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/label_size" />

            <RadioGroup
                android:id="@+id/radioGroupSport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/radio_vtt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/button_vtt_text" />

                <RadioButton
                    android:id="@+id/radio_cyclo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_cyclo_text" />

                <RadioButton
                    android:id="@+id/radio_marche"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_marche_text" />
            </RadioGroup>
            <!-- END - Radio Sports -->


            <!-- BEGIN - Checkbox Departements -->
            <TextView
                android:id="@+id/label_dpts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="70dp"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:text="@string/label_departements"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/label_size" />

            <LinearLayout
                android:id="@+id/linearLayout_dpts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:baselineAligned="false" >

                <LinearLayout
                    android:id="@+id/linearLayout_dpt22"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <CheckBox
                        android:id="@+id/checkBox_dpt22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal" />

                    <TextView
                        android:id="@+id/textView_dpt22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_marginRight="3dp"
                        android:text="@string/dpt22" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout_dpt29"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <CheckBox
                        android:id="@+id/checkBox_dpt29"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal" />

                    <TextView
                        android:id="@+id/textView_dpt29"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_marginRight="3dp"
                        android:text="@string/dpt29" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout_dpt35"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <CheckBox
                        android:id="@+id/checkBox_dpt35"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal" />

                    <TextView
                        android:id="@+id/textView_dpt35"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_marginRight="3dp"
                        android:text="@string/dpt35" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout_dpt56"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <CheckBox
                        android:id="@+id/checkBox_dpt56"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal" />

                    <TextView
                        android:id="@+id/textView_dpt56"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_marginRight="3dp"
                        android:text="@string/dpt56" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout_dpt44"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <CheckBox
                        android:id="@+id/checkBox_dpt44"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal" />

                    <TextView
                        android:id="@+id/textView_dpt44"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_marginRight="3dp"
                        android:text="@string/dpt44" />
                </LinearLayout>
            </LinearLayout>
            <!-- END - Checkbox Departements -->

            <Button
                android:id="@+id/buttonRandoList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="openRandoListView"
                android:text="@string/bouton_listRandos" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>
